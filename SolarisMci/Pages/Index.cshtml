@page
@using SolarisMci.Pages.PartialViews;
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <form class="form-horizontal" method="post">
        <h2># IDs Range</h2>
        <div class="form-group">
            <div class="row">
                <div class="col">
                    <label for="StartRange" class="col-sm-2 control-label">Start</label>
                    <div class="col-sm-10">
                        <input name="StartRange" type="text" value="@Model.StartRange" />
                    </div>
                </div>
                <div class="col">
                    <label for="EndRange" class="col-sm-2 control-label">End</label>
                    <div class="col-sm-10">
                        <input name="EndRange" type="text" value="@Model.EndRange" />
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Update range</button>
            </div>
        </div>
    </form>
</div>
<br />
<div class="text-danger">@Model.Error</div>
<div class="text-center">

    @if (Model.TotalPages > 1)
    {
        <partial name="~/Pages/PartialViews/Pagination.cshtml" model="new PaginationModel(){TotalPages = Model.TotalPages.Value}"></partial>
    }
    @if (Model.IdLists != null)
    {


        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.IdLists)
                {
                    <tr>
                        <th scope="row">@item</th>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.TotalPages >1)
        {
            <partial name="~/Pages/PartialViews/Pagination.cshtml" model="new PaginationModel(){TotalPages = Model.TotalPages.Value}"></partial>
        }
    }
</div>

